{
  "version": 2,
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "Shooter",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "RUN_MODE": "GLAPP_SHOOTER"
      }
    },
    {
      "name": "Debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "RUN_MODE": "GLAPP_SHOOTER"
      }
    },
    {
      "name": "Raster",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "RUN_MODE": "RASTERAPP"
      }
    },
    {
      "name": "Viewer",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "RUN_MODE": "GLAPP_VIEWER"
      }
    },
    {
      "name": "TrackApp",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "RUN_MODE": "TRACKAPP"
      }
    },
    {
      "name": "ThreadTrackApp",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "RUN_MODE": "THREADTRACKAPP"
      }
    }      
  ]
}